<h2>Games</h2>
<div class="row">
  <div class="col-lg-9">
    <% games.forEach((game) => { %>
      <div class="container">
        <div class="row">
          <div class="col col-lg-4"><img class="img-fluid gameImage" src="<%= game.image %>" alt="<%= game.title %>">
          </div>
          <div class="col col-lg-8">
            <div class="row">
              <div class= "col-lg-9">
                <h3>
                  <a href="/games/<%= game.id %>">
                  <%= game.title %>
                </a>
              </h3>
            </div>
          </div>
          <p class="font-italic">From the publisher:</p>
          <p><%= game.description %>
          </p>
        </div>
      </div>
    </div>
    <div class="underline"></div>
    <% }) %>
  </div>
  <div class="col-lg-3">
    <div class="card">
      <h5 class="card-header"><strong>ALL GAMES</strong></h5>
    <div class="card-body row">
        <ul>
          <% games.forEach((game) => { %>
            <li><a href="/games/<%= game.id %>"><%= game.title %><a></li>
            <% }); %>
        </ul>
    </div>
  </div>
</div>
