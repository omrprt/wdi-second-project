<h2>Games</h2>
<% games.forEach((game) => { %>
  <div class="container">
    <div class="row">
      <div class="col col-lg-4"><img class="img-fluid gameImage" src="<%= game.image %>" alt="<%= game.title %>">
      </div>
      <div class="col col-lg-8">
        <div class="row">
          <div class= "col-lg-9">
            <h2>
              <a href="/games/<%= game.id %>">
              <%= game.title %>
            </a>
          </h2>
        </div>
        <div class="nav-link col col-lg-3 text-center">
          <a class="btn btn-primary" href="">Log New Game</a>
        </div>
      </div>
      <p class="font-italic">From the publisher:</p>
      <p><%= game.description %>
      </p>
    </div>
  </div>
</div>
<div class="dropdown-divider"></div>
<% }) %>
