<div class="row">
  <div class="col-lg-3">
    <div class="card">
      <h5 class="card-header"><strong>My Lists</strong></h5>
      <div class="card-body row">
        <h6 class="card-title">Collection: </h6>
        <ul>
          <% user.collectionLog.forEach((game) => { %>
            <li>
              <a href="/games/<%= game.id %>"><%= game.title %></a>
            </li>
            <% }); %>
        </ul>
      </div>
      <div class="underline"></div>
      <div class="card-body row">
        <h6 class="card-title">Wish List: </h6>
        <ul>
          <% user.wishList.forEach((game) => { %>
            <li>
              <a href="/games/<%= game.id %>">
                <%= game.title %>
              </a>
            </li>
            <% }); %>
        </ul>
      </div>
    </div>
  </div>


  <div class="col-lg-9">
    <div class="row">
      <h2>My Profile</h2>
    </div>
    <div class="profileUpdate row">
      <form>
          <div class="row">
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input type="text" class="form-control" value="<%= user.firstName %>" name="firstName" id="firstName" required minlength="2">
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input type="text" class="form-control" value="<%= user.lastName %> "name="lastName" id="lastName" required minlength="2">
        </div>
      </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" value="<%= user.username %>" name="username" id="username" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" value="<%= user.email %>" name="email" id="email" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" placeholder="Password" name="password" id="password" required>
        </div>
        <div class="form-group">
          <label for="passwordConfirmation">Password Confirmation</label>
          <input type="password" class="form-control" placeholder="Password" name="passwordConfirmation" id="passwordConfirmation" required>
        </div>
        <button type="submit" class="btn btn-blue btn-block">Update Profile currently disabled</button>
      </form>
    </div>
    <div class="container flexCard">
      <% user.playLog.forEach((log) => { %>
        <div class="col-lg-6">
          <div class="card">
            <p class="card-header"><strong><a href="/games/<%= log.game.id %>"><%= log.game.title %></strong></a></p>
            <div class="card-body row">
              <ul>
              <li><%= log.endGameImage %></li>
              <li><i class="fa fa-calendar fa-2x dateIcon" aria-hidden="true"> </i>  <%= log.datePlayed %></li>
              <li><i class="fa fa-book fa-2x rulesIcon" aria-hidden="true"> </i>  <%= log.winCondition %></li>
              <li><i class="fa fa-trophy fa-2x winIcon" aria-hidden="true"> </i>  <%= log.result %></li>
              <li><i class="fa fa-commenting fa-flip-horizontal fa-2x notesIcon" aria-hidden="true"> </i>  <%= log.gameNotes %></li>
              </ul>
            </div>
          </div>
        </div>
        <% }) %>
    </div>
  </div>
</div>
